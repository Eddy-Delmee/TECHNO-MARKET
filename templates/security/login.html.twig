{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}

	<section class="bodyLogin">
		<div>
			<form method="post">
				{% if error %}
					<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
				{% endif %}

				{% if app.user %}
					<div class="mb-3">
						You are logged in as
						{{ app.user.userIdentifier }},
						<a href="{{ path('app_logout') }}">Logout</a>
					</div>
				{% endif %}
                
				<div class="spaceLogin2">
					<h1 class="h3 mb-3 font-weight-normal">TECHNO-MARKET<br>Connexion</h1>
				</div>
                <div class="spaceLogin3">
				<label for="inputEmail">Votre Email:</label>
				<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="" autocomplete="email" placeholder="Entrer l'Email ici" required autofocus><br>
                </div>
                <div class="spaceLogin3">
				<label for="inputPassword">Mot de Passe:</label>
				<input type="password" name="password" id="inputPassword" class="" autocomplete="current-password" placeholder="Entrer le Mot de Passe ici" required>

				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
				<br>
                </div>

				{#
														        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
														        See https://symfony.com/doc/current/security/remember_me.html
														
														        <div class="checkbox mb-3">
														            <label>
														                <input type="checkbox" name="_remember_me"> Remember me
														            </label>
														        </div>
														    #}

				<div class="spaceLogin1">
					<button class="btn btn-lg btn-primary" type="submit">
						Envoyer
					</button>
				</div>
			</form>
		</div>
	</section>

{% endblock %}
